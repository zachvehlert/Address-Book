<div id="friends">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
        <th>Github</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user_id == current_user.id %>
          <%= render friend %>
        <% end %>
    </tbody>
    <% end %>
  </table>
</div>
