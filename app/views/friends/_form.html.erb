<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>
      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <% form.label :first_name, style: "display: block", class:"form-label" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First name"%>
  </div>

  <div class="mb-3">
    <% form.label :last_name, style: "display: block", class:"form-label" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last name" %>
  </div>

  <div class="mb-3">
    <% form.label :email, style: "display: block", class:"form-label" %>
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="mb-3">
    <% form.label :phone, style: "display: block", class:"form-label" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone" %>
  </div>

  <div class="mb-3">
    <% form.label :instagram, style: "display: block", class:"form-label" %>
    <%= form.text_field :instagram, class:"form-control", placeholder:"Instagram" %>
  </div>

  <div class="mb-3">
    <% form.label :github, style: "display: block", class:"form-label" %>
    <%= form.text_field :github, class:"form-control", placeholder:"Github" %>
  </div>

  <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, type: "hidden"%>

  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>

<% end %>
