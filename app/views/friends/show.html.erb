<div class="h-100 p-3 bg-light border rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-6 fw-bold">
      <%= @friend.first_name %> <%= @friend.last_name %>
    </h1>
    <br>
    <p>
      Email: <%= @friend.email %>
    </p>
    <hr>
    <p>
      Phone: <%= @friend.phone %>
    </p>
    <hr>
    <p>
      Instagram: <%= @friend.instagram %>
    </p>
    <hr>
    <p>
      Github: <%= @friend.github %>
    </p>
  </div>
</div>
<br>
<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary"%> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"%>
  <hr>
  <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-danger" %>
</div>

